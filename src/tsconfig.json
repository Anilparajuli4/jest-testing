{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "path/to/your/test/files/**/*.ts",
    "path/to/your/test/files/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
